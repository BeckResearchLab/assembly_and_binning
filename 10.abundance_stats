source activate py3
set -eu

mkdir -p abundances
cd abundances

# parse the contig names out of the bin fasta files
python bin_contig_analysis.py -input ../metabat -output bin_contig_mappings.tsv

# calculate abundances 
python aggregate.py -contig_path bin_contig_mappings.tsv -depth_path ../metabat/depth.txt -sample_info_dir ../data/sample_info/

python summarise_bin_abundance_stats_with_bin_info.py

